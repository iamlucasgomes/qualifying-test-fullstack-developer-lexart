{
  "compilerOptions": {
    "target": "es2019",
    "module": "commonjs",
    "sourceMap": true,                     
    "outDir": "./build",
    "rootDir": "./src",
    "strict": true,
    "moduleResolution": "node",
    "baseUrl": ".", 
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "lib": ["DOM", "ES5", "ES6"],
    "paths": {
      "*": ["node_modules/*"],
      "@src/*": ["./src/*"],
    }
  },
  "include": ["src/**/*"],
  "exclude": ["src/tests"]
}